@model IEnumerable<ConfDomain.Model.Ticket>
@{
    ViewData["Title"] = "Ticket list";
}

<section class="user-list-section">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            Create New
        </a>
    </div>

    <ul class="list-group">
        @foreach (var ticket in Model)
        {
            <li class="list-group-item py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="mb-1"><strong>Conference:</strong> @ticket.Conference.Title</p>
                        <p class="mb-0"><strong>User:</strong> @ticket.User.FullName</p>
                    </div>
                    <div class="btn-group">
                        <a asp-action="Edit"
                           asp-route-id="@ticket.Id"
                           class="btn btn-sm btn-outline-user">
                            Edit
                        </a>
                        <a asp-action="Details"
                           asp-route-id="@ticket.Id"
                           class="btn btn-sm btn-outline-user">
                            Details
                        </a>
                        <a asp-action="Delete"
                           asp-route-id="@ticket.Id"
                           class="btn btn-sm btn-outline-user">
                            Delete
                        </a>
                    </div>
                </div>
            </li>
        }
    </ul>
</section>
