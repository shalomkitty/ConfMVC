@model ConfDomain.Model.Conference
@{
    ViewData["Title"] = "Delete Conference";
}

<section class="user-list-section">
    <div class="mb-4">
        <h1 class="mb-1">@ViewData["Title"]</h1>
        <h3 class="text-secondary">Are you sure you want to delete this?</h3>
        <hr />
    </div>

    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Title)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Title)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Description)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Description)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Date)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Date)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Place)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Place)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Price)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Price)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.PublicationId)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.PublicationId)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Organizator)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Organizator.Name)</dd>

        @if (!string.IsNullOrEmpty(Model.Image_path))
        {
            <dt class="col-sm-2">Image</dt>
            <dd class="col-sm-10">
                <img src="@Model.Image_path" alt="Conference Image" style="max-width:200px;" />
            </dd>
        }
    </dl>

    <form asp-action="Delete" class="mt-3 d-flex align-items-center">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">Delete</button>
        <a asp-action="Index" class="btn btn-outline-user">Back to List</a>
    </form>
</section>
