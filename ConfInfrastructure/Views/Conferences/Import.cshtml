@page
@model ConfInfrastructure.Views.Conferences.ImportModel
@{
    ViewData["Title"] = "Import";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["ImportMessage"] != null)
{
    <div class="alert alert-info">
        @TempData["ImportMessage"]
    </div>
}

<form asp-action="ImportFromExcel" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="excelFile" class="form-label">Select excel file</label>
        <input type="file" name="excelFile" id="excelFile" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Import</button>
</form>
