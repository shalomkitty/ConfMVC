@using ConfInfrastructure.ViewModels
@{
    ViewData["Title"] = "Home Page";
}



@model List<UpcomingConferenceViewModel>

<h1 class="text-center">About MeetMint</h1>
<p class="text-center">
    MeetMint is an innovative, user-friendly app designed to streamline conference experiences for organizers and attendees alike. 
    Whether you're hosting a global summit or joining local meetups, MeetMint makes connecting easy and effective.
    This website simplifies conference management, empowering you to focus on creating impactful experiences. 
    Join MeetMint today and transform the way you meet!
</p>

<h2 class="text-center">Upcoming conferences</h2>

@foreach (var conf in Model)
{
    <div class="card mb-3">
        <div class="card-body">
            <h4>@conf.Title</h4>
            <p>@conf.Description</p>
            <p><strong>Date:</strong> @conf.Date.ToShortDateString()</p>
            <p><strong>Place:</strong> @conf.Place</p>

        </div>
    </div>
}




