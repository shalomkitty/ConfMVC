@model ConfDomain.Model.User
@{
    ViewData["Title"] = "User Details";
}

<section class="user-list-section">
    <div class="mb-4">
        <h1 class="mb-1">@ViewData["Title"]</h1>
    </div>

    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.FullName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.FullName)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Email)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Email)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.DateOfBirth)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.DateOfBirth)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Password)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Password)</dd>
    </dl>

    <div class="mt-3">
        <a asp-action="Edit"
           asp-route-id="@Model.Id"
           class="btn btn-outline-user me-2">
            Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-user">
            Back to List
        </a>
    </div>
</section>
