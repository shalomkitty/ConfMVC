@model ConfDomain.Model.Organizator
@{
    ViewData["Title"] = "Organizator Details";
}

<section class="user-list-section">
    <div class="mb-4">
        <h1 class="mb-1">@ViewData["Title"]</h1>
    </div>

    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Name)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Description)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Description)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Party)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Party)</dd>
    </dl>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-user me-2">Edit</a>
        <a asp-action="Index" class="btn btn-outline-user">Back to List</a>
    </div>
</section>
